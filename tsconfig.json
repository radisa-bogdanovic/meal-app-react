{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "outDir": "./dir",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "paths": {
            "*": [
                "src/*"
            ],
        },
        "baseUrl": ".",
    },
    "include": [
        "./src/**/*"
    ]
}